<h1>Burgers!</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-newDevoured="{{devoured}}">
		Devour!
	</button>

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      
      <li>
	{{burger_name}}

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burgerName" name="burgerName">
  </div>

  <button type="submit">Add Burger</button>
</form>